<div class="service-main-wrapper">
	<div class="container">
		<div class="service-header">
			<h3>{{ content.field_sub_heading }}</h3>
			<h1>{{ content.field_heading }}</h1>
			<p>{{ content.field_description }}</p>
		</div>

		<div class="services-body-wrapper">
			{% for item in content.field_multicolumn_service_compon['#items'] %}
				<div class="service-item">
					{% if item.entity.field_service_icon.entity %}
						{% set media_entity = item.entity.field_service_icon.entity %}
						{% if media_entity.field_media_image.entity %}
							{% set image = media_entity.field_media_image.entity %}
							<div class="image-wrapper">
								<img src="{{ image.uri.value | file_url }}" alt="{{ image.alt.value }}">
							</div>
						{% endif %}
					{% endif %}

					<div class="service-content">
						<h3 class="service-title">{{ item.entity.field_service_title.value }}</h3>
						<p class="service-description">{{ item.entity.field_service_description.value }}</p>

						{% if item.entity.field_cta_text.value %}
							{% set cta = item.entity.field_cta_text.value[0] %}
							<a href="{{ cta.uri }}" class="cta-button">{{ cta.title }}</a>
						{% endif %}
					</div>
				</div>
			{% endfor %}
		</div>

	</div>

</div>

