{% set unique_id = content.field_faq['#items'][0].entity.id.value %}
<div class="faq-block">
	<div class="container">
		<div class="faq-wrapper">
			<div class="heading">
				<h2>{{content.field_title}}</h2>
			</div>
			<div class="accordion" id="accordionExample">
				{% for item in content.field_faq['#items'] %}
					<div class="accordion-item">
						{% set accor_id = 'accor-' ~ item.entity.id.value %}
						<h2 class="accordion-header" id="heading-{{accor_id}}">
							<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{accor_id}}" aria-expanded="true" aria-controls="collapse-{{accor_id}}">
								{% if not (item.entity.hasTranslation(lang)) %}
									{% set lang = 'en-gb' %}
								{% endif %}
								{{ item.entity.getTranslation(lang).field_question.value }}
								<span class="open">
									<svg xmlns="http://www.w3.org/2000/svg" width="28" height="29" viewbox="0 0 28 29" fill="none">
										<g clip-path="url(#clip0_58_542)">
											<path d="M14 0.074707C6.28009 0.074707 0 6.3548 0 14.0747C0 21.7946 6.28009 28.0747 14 28.0747C21.7199 28.0747 28 21.7946 28 14.0747C28 6.3548 21.7199 0.074707 14 0.074707ZM20.125 15.2413H7.875C7.23093 15.2413 6.7084 14.7188 6.7084 14.0747C6.7084 13.4306 7.23093 12.9081 7.875 12.9081H20.125C20.7691 12.9081 21.2916 13.4306 21.2916 14.0747C21.2916 14.7188 20.7691 15.2413 20.125 15.2413Z" fill="#A12844"></path>
										</g>
										<defs>
											<clipPath id="clip0_58_542">
												<rect width="28" height="28" fill="white" transform="translate(0 0.074707)"></rect>
											</clipPath>
										</defs>
									</svg>
								</span>
								<span class="close">
									<svg xmlns="http://www.w3.org/2000/svg" width="28" height="29" viewbox="0 0 28 29" fill="none">
										<g clip-path="url(#clip0_58_548)">
											<path d="M14 0.074707C6.28009 0.074707 0 6.3548 0 14.0747C0 21.7946 6.28009 28.0747 14 28.0747C21.7199 28.0747 28 21.7946 28 14.0747C28 6.3548 21.7199 0.074707 14 0.074707ZM20.125 15.2413H15.1666V20.1997C15.1666 20.8438 14.6441 21.3663 14 21.3663C13.3559 21.3663 12.8334 20.8438 12.8334 20.1997V15.2413H7.875C7.23093 15.2413 6.7084 14.7188 6.7084 14.0747C6.7084 13.4306 7.23093 12.9081 7.875 12.9081H12.8334V7.94971C12.8334 7.30563 13.3559 6.78311 14 6.78311C14.6441 6.78311 15.1666 7.30563 15.1666 7.94971V12.9081H20.125C20.7691 12.9081 21.2916 13.4306 21.2916 14.0747C21.2916 14.7188 20.7691 15.2413 20.125 15.2413Z" fill="#A12844"></path>
										</g>
										<defs>
											<clipPath id="clip0_58_548">
												<rect width="28" height="28" fill="white" transform="translate(0 0.074707)"></rect>
											</clipPath>
										</defs>
									</svg>
								</span>
							</button>
						</h2>
						<div id="collapse-{{accor_id}}" class="accordion-collapse collapse" aria-labelledby="heading-{{accor_id}}" data-bs-parent="#accordionExample">
							<div class="accordion-body">
								{% if not (item.entity.hasTranslation(lang)) %}
									{% set lang = 'en-gb' %}
								{% endif %}
								{{ item.entity.getTranslation(lang).field_answer.value }}
							</div>
						</div>
					</div>
				{% endfor %}

			</div>
		</div>
	</div>
</div>
