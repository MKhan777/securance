<div class="two-column-block">
    <div class="container">
        <div class="row">
            {% for item in content.field_text_with_background['#items'] %}
            <div class="col-12 col-lg-6">
                <div class="two-column-content" style="background: {{item.entity.field_background_color.0.color}}">
                    <h2>{{item.entity.field_heading.value}}</h2>
                    <p>{{item.entity.field_description.value}}</p>
                    <div class="two-column-link">
                        <a href=""></a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>