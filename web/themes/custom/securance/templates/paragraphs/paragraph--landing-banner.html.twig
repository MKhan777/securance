<div class="landing-banner" style="background-image: url('{{ file_url(content.field_background_image[0]['#media'].field_media_image.entity.uri.value) }}'); background-position: center; background-size: cover;">
	<div class="container">
		<div class="heading">
			{% if content.field_sub_heading.0['#context'].value %}
				<h6>{{content.field_sub_heading.0['#context'].value}}</h6>
			{% endif %}
			{% if content.field_title.0['#context'].value %}
				<h2>{{content.field_title.0['#context'].value}}</h2>
			{% endif %}
			{% if content.field_description.0['#context'].value  %}
				<p>{{content.field_description.0['#context'].value}}</p>
			{% endif %}
			{% if content.field_cta_text_2['#items'].title %}
				<div class="landing-banner-btn">
					<a href="{{ content.field_cta_text_2['#items'].uri }}">{{content.field_cta_text_2['#items'].title}}</a>
				</div>
			{% endif %}
		</div>
	</div>
</div>
