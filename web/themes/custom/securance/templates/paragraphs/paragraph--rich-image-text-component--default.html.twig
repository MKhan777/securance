{% set image_position_class = '' %}

{% if content.field_set_image_position['#items'].value == 'top' %}
    {% set image_position_class = 'image-position-top' %}
{% elseif content.field_set_image_position['#items'].value == 'left' %}
    {% set image_position_class = 'image-position-left' %}
{% elseif content.field_set_image_position['#items'].value == 'right' %}
    {% set image_position_class = 'image-position-right' %}
{% elseif content.field_set_image_position['#items'].value == 'bottom' %}
    {% set image_position_class = 'image-position-bottom' %}
{% endif %}


<div class="component-wrapper {{image_position_class}} {% if content.field_image_width['#items'].value %} component-wrapper-full-width {% endif %} " style="background-color: {{ content.field_background_color|render|striptags|trim }};">
	<div class="container">
		<div class="row">
			<div class="col-12 col-lg-6">
				<div class="component-content {% if content.field_adjust_content['#items'].value %}component-content-adjustment{% endif %}">
					{% if content.field_sub_heading  %}
						<h3 class="component-subheading" style="color: {{ content.field_sub_heading_color.0['#markup']|striptags|trim }};">
							{{ content.field_sub_heading }}
						</h3>
					{% endif %}
					{% if content.field_title %}
						<h2 class="component-title" style="color: {{ content.field_title_color.0['#markup']|striptags|trim }};">
							{{ content.field_title }}
						</h2>
					{% endif %}

					{% if content.field_description %}
						<div class="component-description" style="color: {{ content.field_description_color.0['#markup']|striptags|trim }};">
							{{ content.field_description}}
						</div>
					{% endif %}
					{% if content.field_body %}
						<div class="component-body">
							{{ content.field_body }}
						</div>
					{% endif %}
				</div>
			</div>
			<div class="col-12 col-lg-6">
				<div class="component-image">
					{{ content.field_figure }}
				</div>
			</div>
		</div>
	</div>
</div>
