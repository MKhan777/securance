<div class="industry-content-block">
	<div class="container">
		<div class="heading">
			<h2>{{content.field_title.0['#context'].value}}</h2>
		</div>
		<div class="row">
			<div class="col-lg-7">
				<div class="industry-content-wrapper">
					<p>{{content.field_description.0['#context'].value}}</p>
					<div class="industry-listing">
						{{content.field_listing}}
					</div>
				</div>
			</div>
			<div class="col-lg-5">
				<div class="industry-img">
				{% if content.field_figure[0]['#media'].field_media_image.entity.uri.value %}
					<img src="{{ file_url(content.field_figure[0]['#media'].field_media_image.entity.uri.value) }}" alt="industry-img">
				{% endif %}
				</div>
			</div>
		</div>
	</div>
</div>
