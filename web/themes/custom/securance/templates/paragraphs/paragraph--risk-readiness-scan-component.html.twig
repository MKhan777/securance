<div class="risk-readiness-block" style="background-image: url('{{ file_url(content.field_background_image[0]['#media'].field_media_image.entity.uri.value) }}'); background-position: center; background-size: cover;">
	<div class="container">
		<div class="risk-readiness-wrapper">
			<div class="heading">
				<h2>{{content.field_title.0['#context'].value}}</h2>
				<p>{{content.field_description.0['#context'].value }}</p>
			</div>
			<div class="risk-readiness-row">
				{% for item in content.field_readiness_scan_stepper['#items'] %}
					<div class="risk-readiness-column">
						<div class="risk-readiness-card">
							<div class="risk-readiness-content">
								<div class="risk-readiness-title">{{ item.entity.field_image_caption.value }}</div>
							</div>
							<div class="risk-readiness-img">
								<div class="risk-readiness-count">0{{ loop.index }}</div>
								{% if loop.last %}
									<img src="/themes/custom/securance/images/risk-readiness-card-img2.png">
								{%  else %}
									<img src="/themes/custom/securance/images/risk-readiness-card-img.png">
								{% endif %}
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
			<div class="risk-readiness-btn">
				{{content.field_cta_text_2}}
			</div>
		</div>
	</div>
</div>
